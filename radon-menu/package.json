{
	"name": "radon-menu",
	"displayName": "radon-menu",
	"description": "A custom  menu to launch RADON tools",
	"version": "0.0.1",
	"publisher": "radon",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:radon-menu.deployCSAR",
		"onCommand:radon-menu.deployStatus",
		"onCommand:radon-menu.startHelp"
	],
	"main": "./out/extension.js",
	"contributes": {
		"menus": {
			"commandPalette": [
				{
					"when": "resourceExtname == .csar && resourceSet",
					"command": "radon-menu.deployCSAR"
				},
				{
					"command": "radon-menu.deployStatus"
				},
				{
					"command": "radon-menu.startHelp"
				}
			],
			"explorer/context": [
				{
					"when": "resourceExtname == .csar",
					"command": "radon-menu.deployCSAR",
					"group": "myGroup@1"
				}
			]
		},
		"commands": [
			{
				"command": "radon-menu.deployCSAR",
				"category": "RADON",
				"title": "Deploy CSAR"
			},
			{
				"command": "radon-menu.deployStatus",
				"category": "RADON",
				"title": "Show Deployment Status"
			},
			{
				"command": "radon-menu.startHelp",
				"category": "RADON",
				"title": "Open Help Page"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"simple-git": "^3.3.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
